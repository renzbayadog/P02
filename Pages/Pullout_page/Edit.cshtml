@page "/Pullouts/Edit/{id?}"
@using IdigitalCafe.Pages.Pullout_page.Pullout_pge
@model EditModel

@{
    Layout = null;
}

<form id="Pullout-update-form" class="form-horizontal popup-form" style="padding:15px;">
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Update Pullout Details</h4>
    </div>  
    <div class="modal-body" style="padding:15px;">
        <input type="hidden" asp-for="Pullout.PulloutId" id=js-pulloutid />
		
		<div class="col-md-4 col-sm-12 col-xs-12 form-group">
		    <label asp-for="Pullout.PulloutName"></label>				
			<input asp-for="Pullout.PulloutName" id="js-pulloutname" class="form-control" />
		    <span asp-validation-for="Pullout.PulloutName" class="text-danger"></span>
		</div>
		<div class="col-md-4 col-sm-12 col-xs-12 form-group">
		    <label asp-for="Pullout.PulloutDescription"></label>				
			<textarea asp-for="Pullout.PulloutDescription" id="js-pulloutdescription" class="form-control"></textarea>
		    <span asp-validation-for="Pullout.PulloutDescription" class="text-danger"></span>
		</div>
		<div class="col-md-4 col-sm-12 col-xs-12 form-group">
		    <label asp-for="Pullout.PulloutDate"></label>				
			<input asp-for="Pullout.PulloutDate" id="js-pulloutdate" class="form-control" />
		    <span asp-validation-for="Pullout.PulloutDate" class="text-danger"></span>
		</div>
		<div class="col-md-4 col-sm-12 col-xs-12 form-group">
		    <label asp-for="Pullout.SalesId"></label>				
			<br/><select asp-for="Pullout.SalesId" id="js-salesid" class="selectpicker" data-live-search="true" asp-items="ViewBag.SalesId"><option value="">-- Select --</option></select>
		    <span asp-validation-for="Pullout.SalesId" class="text-danger"></span>
		</div>
		<div class="col-md-4 col-sm-12 col-xs-12 form-group">
		    <label asp-for="Pullout.ReceiptImage"></label>				
			<input type="file" id="js-file" />
		    <span asp-validation-for="Pullout.ReceiptImage" class="text-danger"></span>
		</div>
		<div class="col-md-4 col-sm-12 col-xs-12 form-group">
		    <label asp-for="Pullout.businessValue"></label>				
			<input asp-for="Pullout.businessValue" id="js-businessvalue" class="form-control" />
		    <span asp-validation-for="Pullout.businessValue" class="text-danger"></span>
		</div>
    </div>
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="modal-footer">
				<button type="submit" class="btn btn-primary btn-custom" style="margin-top:10px"><i class="fa fa-save"></i> Save</button>
			<button type="submit" class="btn btn-primary btn-custom" data-dismiss="modal" style="margin-top:10px"><i class="fa fa-close"></i> Cancel</button>
		</div>
	</div>
</form>
